{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-eval": "warn",
        "semi": ["error", "always", {"omitLastInOneLineBlock": true}],
        "curly": ["error", "multi-or-nest"],
        "block-scoped-var": "error"
    }
}
